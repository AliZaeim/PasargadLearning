@model PLCore.DTOs.Account.ConfirmCellphoneViewModel
<hr />
@if (Model.Key.ToLower() == "s")
{
    <h2 class="text-xs-center"> ثبت نام فراگیر</h2>
}
@if (Model.Key.ToLower() == "t")
{
    <h2 class="text-xs-center"> ثبت نام مدرس</h2>
}
<h4 class="text-xs-center ">
    <span class="tag tag-warning">مرحله 2</span>
</h4>
<hr />
<div class="row">
    <div class="col-xs-12">
        <form asp-action="ConfirmCellphone" asp-controller="Account" data-ajax="true"
              data-ajax-method="POST"
              data-ajax-mode="replace"
              data-ajax-update="#step1" class="mt-1">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Key" />
            <input type="hidden" asp-for="CId" />
            <div class="form-group">
                <label asp-for="UserNC" class="control-label"></label>
                <input readonly asp-for="UserNC" class="form-control" />
                <span asp-validation-for="UserNC" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UserCellphone" class="control-label"></label>
                <input readonly asp-for="UserCellphone" class="form-control" />
                <span asp-validation-for="UserCellphone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ConfirmCode" class="control-label"></label>
                <input asp-for="ConfirmCode" autofocus autocomplete="off" class="form-control" placeholder="لطفا کد ارسال شده به تلفن همراه تان را وارد کنید" />
                <span asp-validation-for="ConfirmCode" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="مرحله بعد" class="btn btn-primary btn-lg col-xs-12" />
            </div>
        </form>
    </div>
</div>

<script src="~/LayoutRef/js/jquery.validate.js"></script>
<script src="~/LayoutRef/js/jquery.validate.unobtrusive.js"></script>
<script type="text/javascript">
    $(document).ready(function () {
        $(document).find("#st1").removeClass("btn-primary");
        $(document).find("#st1").addClass("btn-success");

        $(document).find("#st2").toggleClass("btn-primary btn-default");

        $(document).find("#st2").removeAttr("disabled");
        $(document).find("#st1").attr("disabled", "disabled");
    });

</script>
