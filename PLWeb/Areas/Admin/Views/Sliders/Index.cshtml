@model IEnumerable<PLDataLayer.Entities.SubEntities.Slider>
@using PLCore.Services.Interfaces;
@inject IUserService _UserService
@{
    ViewData["Title"] = "اسلایدرها";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
@{
    int roleId = int.Parse(User.FindFirst("RoleId").Value);
}
<h1 class="text-xs-center alert alert-info">اسلایدرها</h1>
@if (_UserService.CheckPermission(89, User.Identity.Name, roleId))
{
    <p>
        <a asp-action="Create" class="btn btn-success">ثبت اسلایدر</a>
    </p>
}

<div class="table-responsive">
    <table class="table table-bordered">
        <thead>
            <tr>
                <th class="text-xs-center align-middle">
                    @Html.DisplayNameFor(model => model.SliderImage)
                </th>
                <th class="text-xs-center align-middle">
                    @Html.DisplayNameFor(model => model.SliderText1)
                </th>
                <th class="text-xs-center align-middle">
                    @Html.DisplayNameFor(model => model.SliderText1Class)
                </th>
                <th class="text-xs-center align-middle">
                    @Html.DisplayNameFor(model => model.SliderText2)
                </th>
                <th class="text-xs-center align-middle">
                    @Html.DisplayNameFor(model => model.SliderText2Class)
                </th>
                <th class="text-xs-center align-middle">
                    @Html.DisplayNameFor(model => model.SliderButton1Text)
                </th>
                <th class="text-xs-center align-middle">
                    @Html.DisplayNameFor(model => model.SliderButton1Link)
                </th>
                <th class="text-xs-center align-middle">
                    @Html.DisplayNameFor(model => model.SliderButton2Text)
                </th>
                <th class="text-xs-center align-middle">
                    @Html.DisplayNameFor(model => model.SliderButton2Link)
                </th>
                <th class="text-xs-center align-middle"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td class="text-xs-center align-middle">
                        <img src="~/images/slider/@item.SliderImage" width="50" height="50" />
                    </td>
                    <td class="text-xs-center align-middle">
                        @Html.DisplayFor(modelItem => item.SliderText1)
                    </td>
                    <td class="text-xs-center align-middle">
                        @Html.DisplayFor(modelItem => item.SliderText1Class)
                    </td>
                    <td class="text-xs-center align-middle">
                        @Html.DisplayFor(modelItem => item.SliderText2)
                    </td>
                    <td class="text-xs-center align-middle">
                        @Html.DisplayFor(modelItem => item.SliderText2Class)
                    </td>
                    <td class="text-xs-center align-middle">
                        @Html.DisplayFor(modelItem => item.SliderButton1Text)
                    </td>
                    <td class="text-xs-center align-middle">
                        @Html.DisplayFor(modelItem => item.SliderButton1Link)
                    </td>
                    <td class="text-xs-center align-middle">
                        @Html.DisplayFor(modelItem => item.SliderButton2Text)
                    </td>
                    <td class="text-xs-center align-middle">
                        @Html.DisplayFor(modelItem => item.SliderButton2Link)
                    </td>
                    <td class="text-xs-center align-middle">
                        @if (_UserService.CheckPermission(90, User.Identity.Name, roleId))
                        {
                            <a asp-action="Edit" asp-route-id="@item.SliderId">ویرایش</a> <span> | </span>
                        }
                        @if (_UserService.CheckPermission(91, User.Identity.Name, roleId))
                        {
                            <a asp-action="Details" asp-route-id="@item.SliderId">جزئیات</a> <span> | </span>
                        }
                        @if (_UserService.CheckPermission(92, User.Identity.Name, roleId))
                        {
                            <a asp-action="Delete" asp-route-id="@item.SliderId">حذف</a>
                        }



                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
