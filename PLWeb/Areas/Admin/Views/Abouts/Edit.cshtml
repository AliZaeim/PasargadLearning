@model PLDataLayer.Entities.SubEntities.About

@{
    ViewData["Title"] = "ویرایش درباره ما";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<script src="~/AdminRef/ckeditor/ckeditor.js"></script>
<h1 class="text-xs-center alert alert-info">
    ویرایش درباره ما
    <a asp-action="Index" class="float-xs-left btn btn-warning">بازگشت</a>
</h1>
<hr />
<div class="row">
    <div class="col-xs-12 offset-md-2 col-md-6">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="About_Id" />
            <input type="hidden" asp-for="About_Image" />
            <input type="hidden" asp-for="About_HImage" />
            <div class="form-group">
                <label asp-for="About_Title" class="control-label"></label>
                <input asp-for="About_Title" class="form-control" />
                <span asp-validation-for="About_Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="About_Text" class="control-label"></label>
                <textarea asp-for="About_Text" rows="30" cols="30" class="form-control"></textarea>
                <span asp-validation-for="About_Text" class="text-danger"></span>
            </div>
            <script>
                CKEDITOR.replace('About_Text');
            </script>
            <div class="form-group">
                <label asp-for="About_Image" class="control-label"></label><img src="~/images/about/@Model.About_Image" id="abimg" width="50" height="50" class="float-xs-left" />
                <input asp-for="About_Image" type="file" class="form-control" />
                <span asp-validation-for="About_Image" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="About_HImage" class="control-label"></label><img src="~/images/about/@Model.About_HImage" id="abhimg" width="50" height="50" class="float-xs-left" />
                <input asp-for="About_HImage" type="file" class="form-control" />
                <span asp-validation-for="About_HImage" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="ویرایش" class="btn btn-primary col-xs-12" />
            </div>
        </form>
    </div>
</div>
@section Scripts
{
    <script src="~/LayoutRef/js/jquery.validate.js"></script>
    <script src="~/LayoutRef/js/jquery.validate.unobtrusive.js"></script>
    <script src="~/AdminRef/app-assets/js/jquery.elevatezoom.js"></script>
    <script>
         $("#abimg").elevateZoom({

            zoomWindowFadeIn: 500,
            zoomWindowFadeOut: 500,
            lensFadeIn: 500,
            lensFadeOut: 500,
            zoomWindowWidth:300,
            zoomWindowHeight: 300
         });
        $("#abhimg").elevateZoom({

            zoomWindowFadeIn: 500,
            zoomWindowFadeOut: 500,
            lensFadeIn: 500,
            lensFadeOut: 500,
            zoomWindowWidth:300,
            zoomWindowHeight: 300
        });
    </script>
}

