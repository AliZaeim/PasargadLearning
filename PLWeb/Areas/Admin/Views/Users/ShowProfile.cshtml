@model PLDataLayer.Entities.User.User
@using PLCore.Convertors;
@using PLCore.Services.Interfaces;
@inject IUserService  _userService;
@{
    ViewData["Title"] = "نمایش پروفایل";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    int roleId = int.Parse(User.FindFirst("RoleId").Value);
    var role = await _userService.GetRoleByIdAsync(roleId);
}

<h1 class="text-xs-center alert alert-info">
    پروفایل @Model.UserFirstName @Model.UserFamily با مسئولیت @role.RoleTitle
</h1>

<div>
    <h4>اطلاعات کاربر</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.UserFirstName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UserFirstName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.UserFamily)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UserFamily)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.UserNC)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UserNC)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.UserNCFile)
        </dt>
        <dd class="col-sm-10">
            <img width="100" height="100" src="~/images/usersnc/@Model.UserNCFile" />
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.UserBirthDate)
        </dt>
        <dd class="col-sm-10">
            @Model.UserBirthDate
        </dd>


        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.UserAvatar)
        </dt>
        <dd class="col-sm-10">
            <img width="100" height="100" src="~/images/usersavatar/@Model.UserAvatar" />
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.LevelOfEducation)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.LevelOfEducation)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.EducationFile)
        </dt>
        <dd class="col-sm-10">
            <img width="100" height="100" src="~/images/usersorgdoc/@Model.EducationFile" />
        </dd>
        @if (roleId == 3)
        {
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.UserUniversity)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.UserUniversity)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.UserYearofGraduataion)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.UserYearofGraduataion)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.UserBiography)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.UserBiography)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.UserDescription)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.UserDescription)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.UserLabel)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.UserLabel)
            </dd>

        }


        @if (roleId == 4)
        {

            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.UserOrgCode)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.UserOrgCode)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.UserLevel)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.UserLevel.UserLevel_Title)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.UserContractFile)
            </dt>
            <dd class="col-sm-10">
                <img width="100" height="100" src="~/images/usersorgdoc/@Model.UserContractFile" />
            </dd>

        }


        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.UserSex)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UserSex)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.UserCellPhone)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UserCellPhone)
        </dd>
        <dt class="col-sm-2">
