            @Html.DisplayFor(model => model.County.CountyName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.UserRestAddress)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UserRestAddress)
        </dd>

    </dl>
</div>

