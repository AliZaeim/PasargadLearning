@model PLDataLayer.Entities.Sale.SteppedDiscountDetail
@using PLCore.Convertors;
@{
    ViewData["Title"] = "حذف ردیف تخفیف پله ای ";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h1 class="text-xs-center alert alert-danger">حذف ردیف تخفیف پله ای</h1>

<h3 class="text-xs-center alert alert-warning">آیا مطمئن به حــذف هستید؟</h3>
<div>

    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FromPerson)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FromPerson)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ToPerson)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ToPerson)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FromDate)
        </dt>
        <dd class="col-sm-10">
            @Model.FromDate.ToShamsiN_WithTime()
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ToDate)
        </dt>
        <dd class="col-sm-10">
            @Model.ToDate.ToShamsiN_WithTime()
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Percent)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Percent)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.SteppedDiscount)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SteppedDiscount.Code)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="حــذف" class="btn btn-danger" /> |

        <a asp-action="Index" asp-route-code="@Model.SteppedDiscount.Code">بازگشت</a>

    </form>
</div>
