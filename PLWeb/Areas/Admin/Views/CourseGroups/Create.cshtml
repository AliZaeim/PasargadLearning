@model PLDataLayer.Entities.Training.CourseGroup

@{
    ViewData["Title"] = "ثبت گروه آموزش";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h1 class="text-xs-center alert alert-info">
    ثبت گروه آموزشی
    <a asp-action="Index" class="float-xs-left btn btn-warning">بازگشت</a>
</h1>
<hr />
<div class="row">
    <div class="offset-md-4 col-md-4 col-xs-12">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CourseGroup_Title" class="control-label"></label>
                <input asp-for="CourseGroup_Title" class="form-control" />
                <span asp-validation-for="CourseGroup_Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CourseGroup_Comment" class="control-label"></label>
                <textarea asp-for="CourseGroup_Comment" rows="10" class="form-control"></textarea>
                <span asp-validation-for="CourseGroup_Comment" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CourseGroup_Image" class="control-label"></label><span class="float-xs-left">size : w:369px-h:264px</span>
                <input asp-for="CourseGroup_Image" type="file" class="form-control" />
                <span asp-validation-for="CourseGroup_Image" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="ثبت" class="btn btn-primary col-xs-12" />
            </div>
        </form>
    </div>
</div>
@section Scripts
{
    <script src="~/LayoutRef/js/jquery.validate.min.js"></script>
    <script src="~/LayoutRef/js/jquery.validate.unobtrusive.min.js"></script>
}







