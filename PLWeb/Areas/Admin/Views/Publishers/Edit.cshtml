@model PLDataLayer.Entities.Blog.Publisher

@{
    ViewData["Title"] = "ویرایش ناشر";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

    <h1 class="text-xs-center alert alert-info">
        ویرایش ناشر
        <a asp-action="Index" class="float-xs-left btn btn-warning">بازگشت</a>
    </h1>
<hr />
<div class="row">
    <div class="col-xs-12 offset-md-4 col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Publisher_Id" />
            <div class="form-group">
                <label asp-for="Publisher_Title" class="control-label"></label>
                <input asp-for="Publisher_Title" class="form-control" />
                <span asp-validation-for="Publisher_Title" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <input type="submit" value="ویرایش" class="btn btn-primary col-xs-12" />
            </div>
        </form>
    </div>
</div>


