@model PLDataLayer.Entities.SubEntities.PackInfo

@{
    ViewData["Title"] = "ویرایش اطلاعات پکیج";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h1 class="text-xs-center alert alert-info">
    ویرایش اطلاعات پکیج
    <a asp-action="Index" class="float-xs-left btn btn-warning">بازگشت</a>
</h1>
<hr />

<div class="row">
    <div class="offset-md-4  col-md-4 col-xs-12">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="PackInfo_Id" />
            <div class="form-group">
                <label asp-for="PackInfo_PackName" class="control-label"></label>
               
                <select asp-for="PackInfo_PackName" class="form-control">
                    <option value="">انتخاب کنید ...</option>
                    <option value="pideas">نظرات</option>
                    <option value="pfaq">پرسش و پاسخ</option>
                    <option value="pteachers">مدرسان</option>
                    <option value="pnews">آخرین اخبار</option>
                </select>
                <span asp-validation-for="PackInfo_PackName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PackInfo_Title" class="control-label"></label>
                <input asp-for="PackInfo_Title" class="form-control" />
                <span asp-validation-for="PackInfo_Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PackInfo_Comment" class="control-label"></label>
                <textarea asp-for="PackInfo_Comment" rows="3" maxlength="1000" class="form-control" ></textarea>
                <span asp-validation-for="PackInfo_Comment" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="ویرایش" class="btn btn-primary col-xs-12" />
            </div>
        </form>
    </div>
</div>



