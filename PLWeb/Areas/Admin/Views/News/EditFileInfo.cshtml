@model PLDataLayer.Entities.Blog.NewsFile

@{
    ViewData["Title"] = "EditFileInfo";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

    <h1 class="text-xs-center alert alert-info">
        ویرایش توضیحات فایل
        <a asp-action="Details" asp-route-id="@Model.News_Id" class="float-xs-left btn btn-warning">بازگشت</a>
    </h1>


<div class="row">
    <div class="offset-md-4 col-md-4 col-xs-12">
        <form asp-action="EditFileInfo">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="NF_Id" />
            <input type="hidden" asp-for="NF_File" />
            <input type="hidden" asp-for="NF_Type" />
            <input type="hidden" asp-for="News_Id" />
           
            <div class="form-group">
                <label asp-for="NF_Comment" class="control-label"></label>
                <input asp-for="NF_Comment" class="form-control" />
                <span asp-validation-for="NF_Comment" class="text-danger"></span>
            </div>
            
            
            <div class="form-group">
                <input type="submit" value="ویرایش" class="btn btn-primary col-xs-12" />
            </div>
        </form>
    </div>
</div>



