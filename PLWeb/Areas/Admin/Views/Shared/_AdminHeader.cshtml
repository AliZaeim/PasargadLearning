                </ul>



                <ul class="nav navbar-nav float-xs-left">
                    
                    <li class="nav-item">
                        <a href="javascript:void(0)" class="nav-link">نام کاربری : @User.Identity.Name</a>
                    </li>
                    @if (role != null)
                    {
                        <li class="nav-item">

                            <a class="nav-link">مسئولیت : @role.RoleTitle</a>
