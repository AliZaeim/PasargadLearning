                                @if (!string.IsNullOrEmpty(user.UserAvatar))
                                {
                                    <img src="~/images/usersavatar/@user.UserAvatar" alt=""><i></i>
                                }
                                else
                                {
                                    <img src="~/images/Noimage.png" alt=""><i></i>
                                }

                            </span>
                            <span class="user-name">@user.UserFirstName @user.UserFamily</span>
