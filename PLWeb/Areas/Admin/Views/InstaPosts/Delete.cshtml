@model PLDataLayer.Entities.SubEntities.InstaPost

@{
    ViewData["Title"] = "حذف پست";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h1 class="text-xs-center alert alert-info">
    حذف پست
    <a asp-action="Index" class="float-xs-left btn btn-warning">بازگشت</a>
</h1>

<h3 class="text-xs-center alert alert-danger">آیا مطمئن به حذف پست هستید؟</h3>
<div>
    <h4>پست اینستاگرام</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.InstaPostTitle)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.InstaPostTitle)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.InstaPostText)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.InstaPostText)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.InstaPostImage)
        </dt>
        <dd class="col-sm-10">
            <img src="~/images/instagram/@Model.InstaPostImage" width="100" height="100" />
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.InstaPostLink)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.InstaPostLink)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.IsActive)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IsActive)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Photographer)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Photographer)
        </dd>
        
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="InstaPostId" />
        <input type="submit" value="حــذف" class="btn btn-danger" /> |
        <a asp-action="Index">بازگشت</a>
    </form>
</div>
